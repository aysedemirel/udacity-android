<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/song"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_activitymain_text_h2"
                android:background="@color/category_pop"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_activitymain_text_paddingtop"
                android:text="@string/song"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/lastlistened"
                android:textSize="@dimen/activity_activitymain_textsize" />

            <TextView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_activitymain_text_h2"
                android:background="@color/category_hiphop"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_activitymain_text_paddingtop"
                android:text="@string/list"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/lastlistened"
                android:textSize="@dimen/activity_activitymain_textsize" />

            <TextView
                android:id="@+id/album"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_activitymain_text_h"
                android:background="@color/category_rock"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_activitymain_text_paddingtop"
                android:text="@string/album"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/lastlistened"
                android:textSize="@dimen/activity_activitymain_textsize"/>

            <TextView
                android:id="@+id/last"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_activitymain_text_h"
                android:background="@color/category_classic"
                android:paddingTop="@dimen/activity_activitymain_text_paddingtop"
                android:text="@string/last"
                android:textAllCaps="true"
                android:textColor="@color/lastlistened"
                android:textSize="@dimen/activity_activitymain_textsize" />

        </LinearLayout>
    </ScrollView>

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listview_flavor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" />
</LinearLayout>