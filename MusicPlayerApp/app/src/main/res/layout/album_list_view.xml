<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/album1"
        android:layout_width="@dimen/activity_playlist_image_margin"
        android:layout_height="@dimen/activity_playlist_image_margin"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/activity_albumlistview_image_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_toStartOf="@+id/album_title"
        android:layout_toLeftOf="@+id/album_title"
        android:contentDescription="@string/album" />

    <TextView
        android:id="@+id/album_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_albumlistview_text_margin"
        android:textAlignment="center"
        android:textAllCaps="true" />
</RelativeLayout>